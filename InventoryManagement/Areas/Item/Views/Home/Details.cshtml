@model InventoryManagement.Models.StockItem
@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">

	<div class="container backgroundWhite">
		<div class="card">
			<div class="card-header bg-light text-light ml-0 row container">
				<div class="col-12 col-md-6">
					<h1 class="text-primary">@Model.Name</h1>
				
				</div>

			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-8 col-lg-8">

							<div class="row pl-2">
								<h3 class="text-muted">WareHouse Name: @Model.WareHouse.Title</h3>
								<h3 class="text-muted mt-2">WareHouse Loaction: @Model.WareHouse.Location</h3>
							</div>
							<div class="row pl-2">
								<h3 class="text-black-50 mt-2 pb-2">Employee In Charge: @Model.Employee.Name</h3>
							</div>
							<div class="row pl-2">
								<h3 class="text-black-50 mt-2 pb-2">Date Stocked: @Model.DateCreated</h3>
							</div>
							<div class="row text-center pl-2">
								<div class="p-1 col-2 bg-secondary border-bottom">
									<div><b>Quantity:</b></div>
								</div>
								<div class="p-1 col-2 bg-secondary border-bottom">
									<div><h5>@Model.Count</h5></div>
								</div>

							</div>
							<div class="row text-center pl-2" style="color:maroon; font-weight:bold">
								<div class="p-1 col-2 bg-secondary">
									<div><strong>Price:</strong></div>
								</div>
								<div class="p-1 col-2 bg-secondary">
									<div><h5>@Model.Price.ToString("c")</h5></div>
								</div>

							</div>
							<div><h5>Description</h5></div>
							<div class="row pl-2 pt-3  bg-secondary border-bottom">

								<p class="text-secondary ml-3">@Html.Raw(Model.Description)</p>
							</div>

						</div>
						<div class="col-12 col-lg-3 offset-lg-1 text-center">
							<img src="@Model.ImageUrl" width="100%" class="rounded" />
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-6 pb-1">
						<a asp-action="Index" class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Back to List</a>
					</div>
					@*<div class="col-12 col-md-6 pb-1">

						<button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>

					</div>*@
				</div>
			</div>
		</div>
	</div>
</form>
